@page "/fetchcars"
@using CarAuctions.Shared
@inject HttpClient Http

<PageTitle>Car Listings</PageTitle>

<h1>Car Listings</h1>

<p>This component demonstrates fetching car data from the server.</p>

@if (cars == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Year</th>
                <th>Color</th>
                <th>Mileage</th>
                <th>Price</th>
                <th>Fuel Type</th>
                <th>Features</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in cars)
            {
                <tr>
                    <td>@car.Make</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                    <td>@car.Color</td>
                    <td>@car.FuelType</td>
                    <td>@string.Join(", ", car.Features)</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Car[]? cars;

    protected override async Task OnInitializedAsync()
    {
        cars = await Http.GetFromJsonAsync<Car[]>("https://www.freetestapi.com/api/v1/cars");
    }

    public class Car
    {
        public string Make { get; set; } = string.Empty;
        public string Model { get; set; } = string.Empty;
        public int Year { get; set; }
        public string Color { get; set; } = string.Empty;
        public int Mileage { get; set; }
        public decimal Price { get; set; }
        public string FuelType { get; set; } = string.Empty;
        public string[] Features { get; set; } = Array.Empty<string>();
    }
}
